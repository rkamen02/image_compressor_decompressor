unsigned moveInBoundsUint( unsigned value, unsigned min, unsigned max)
{
	if (value < min) {
		return min;
	}

	if (value > max) {
		return max;
	}

	return value;
}


int moveInBoundsInt( int value, int min, int max)
{
	if (value < min) {
		return min;
	}

	if (value > max) {
		return max;
	}

	return value;
}

float moveInBoundsFloat( float value, float min, float max)
{
	if (value < min) {
		return min;
	}

	if (value > max) {
		return max;
	}

	return value;
}
